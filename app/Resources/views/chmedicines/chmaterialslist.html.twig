{% extends "base.html.twig" %}

{% block main %}
    <table class="table table-hover table-responsive">
        <thead>
        <tr>
            <th>药材名称</th>
            <th>英文名</th>
            <th>是否道地药材</th>
            <th>邮件</th>
            <th>更新时间</th>
        </tr>
        </thead>
        <tbody>
        {% for ma in chmaterials %}
            <tr>
                <td>{{ ma.name }}</td>
                <td>{{ ma.enname}}</td>
                <td>{{ ma.isRegionalDrug }}</td>
                <td></td>
                <td>{{ ma.updateTime }}</td>
                <td><a href="{{ path('chmedicine_detail',{id:ma.id}) }}" class="btn btn-sm btn-default">
                        <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                    </a>
                    <a href="" class="btn btn-default btn-sm">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                        {{ 'action.edit'|trans }}</a>
                    <a href="" class="btn btn-default btn-sm">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                        {{ 'action.delete'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5"><div class="well">{{ 'post.no_posts_found'|trans }}</div></td></tr>
        {% endfor %}

        {% if chmaterials.haveToPaginate %}
            <tr><td colspan="5">
            <div class="navigation text-center">
                {{ pagerfanta(chmaterials, 'twitter_bootstrap3_translated', {routeName: 'chmaterials_index_paginated'}) }}
            </div>
                </td></tr>
        {% endif %}
    </table>
{% endblock %}
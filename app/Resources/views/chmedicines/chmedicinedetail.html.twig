{% extends 'admin/layout.html.twig' %}


{% block main %}
    <h1 class="center-block">{{ chmedicine.breed }}</h1>
    <div class="input-group input-group-addon list-group">
        <table class="table table-responsive text-left" >
            <tr>
                <td>
                <span class="list-group-item-text left" ><i class="fa fa-joomla"></i>生产企业: {{ chmedicine.meenterprise.name }}</span><br>
            </td></tr>
            <tr>
                <td>
                    <span class="metadata"><i class="fa fa-share-alt"></i>剂型:{{ chmedicine.Dosage_form }}</span><br>
            </td></tr>
            <tr>
                <td><span class="metadata"><i class="fa fa-align-center"></i>处方 :
                {% for link in chmedicine.linkChMedicineChMaterials  %}
                {{  link.chMaterials.name }}{{  link.dosage }}{{  link.unit }}
                {%  endfor  %}
                </span><br>
            </td></tr>
            <tr>
                <td>
                    <span class="metadata"><i class="fa fa-bed"></i>方源 :{{ chmedicine.Drug_source }}</span><br>
            </td></tr>
            <tr>
                <td>
                    <span class="metadata"><i class="fa fa-ils"></i>销售额 :{{ chmedicine.sales_amount }}</span><br>
            </td></tr>
            <tr>
                <td>
                    <span class="metadata"><i class="fa fa-wordpress"></i>批准文号:{{ chmedicine.Approval_number }}</span><br>
            </td></tr></table>
    </div>
    <div class="section" style="width:100px;">
        <a href="{{ path('chmedicine_list') }}" class="btn btn-success">
            <i class="fa fa-backward" aria-hidden="true"></i>{{ 'medicine.backlist'|trans }}
        </a>
    </div>
    {# <p class="post-metadata">
       <span class="metadata"><i class="fa fa-calendar"></i> {{ chmedicine.publishedAt|localizeddate('long', 'medium', null, 'UTC') }}</span>
        <span class="metadata"><i class="fa fa-user"></i> {{ chmedicine.author.fullName }}</span>
    </p>

    <div class="well">
        <p class="m-b-0"><strong>{{ 'label.summary'|trans }}</strong>: {{ chmedicine.summary }}</p>
    </div>

    {{ chmedicine.content|md2html }}

    {{ include('blog/_post_tags.html.twig') }}#}
{% endblock %}


